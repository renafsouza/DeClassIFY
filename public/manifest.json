{
  "manifest_version": 3,
  "name": "DeClassIFY",
  "version": "2.0",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "libs/pdf.min.js", "libs/pdf-worker.min.js","build/bundle.js"
      ],
      "css": ["build/bundle.css"]
    }
  ]
}